{
  "name": "baby-tracker-web",
  "version": "1.0.0",
  "description": "Cross-platform baby tracking application with offline-first architecture",
  "private": true,
  "workspaces": [
    "packages/web/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run --recursive build",
    "test": "pnpm run --recursive test",
    "lint": "pnpm run --recursive lint",
    "type-check": "pnpm run --recursive type-check",
    "clean": "pnpm run --recursive clean",
    "web:dev": "pnpm --filter web dev",
    "web:build": "pnpm --filter web build",
    "mobile:start": "pnpm --filter mobile start",
    "mobile:android": "pnpm --filter mobile android",
    "mobile:ios": "pnpm --filter mobile ios",
    "domain:build": "pnpm --filter @baby/domain build"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "prettier": "^3.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "vite": "^4.4.5",
    "vite-plugin-pwa": "^0.16.4",
    "@vitejs/plugin-react": "^4.0.3",
    "typescript": "^5.0.2"
  },
  "packageManager": "pnpm@8.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
